{# {% extends 'admin/layout.html.twig' %} #}
{% block main %}
<h2> Users List</h2>
<table class="table table-striped table-middle-aligned table-borderless">
<thead>
    <tr>
        <th scope="col">ID</th>
        <th scope="col">Email</th>
        <th scope="col">Role</th>
        <th scope="col" class="text-center"><i class="fa fa-cogs" aria-hidden="true"></i> {{ 'Action'|trans }}</th>
    </tr>
</thead>
<tbody>
{% for user in users %}
    <tr>
        <td>{{ user.id }}</td>
        <td>{{ user.email }}</td>
        <td>{{ user.roles|join(',') }}</td>
        <td class="text-right">
            <div class="item-actions">
                <a href="{{ path('admin_user_edit', {id: user.id}) }}" class="btn btn-sm btn-primary">
                    <i class="fa fa-edit" aria-hidden="true"></i> {{ 'Edit'|trans }}
                </a>
            </div>
        </td>
        <td class="text-right">
            <div class="item-actions">
                <a href="{{ path('admin_user_delete', {id: user.id}) }}" class="btn btn-sm btn-primary">
                    <i class="fa fa-edit" aria-hidden="true"></i> {{ 'Delete'|trans }}
                </a>
            </div>
        </td>
    </tr>
{% else %}
    <tr>
        <td colspan="4" align="center">No users found</td>
    </tr>
{% endfor %}
</tbody>
</table>
{% endblock %}
