{# {% extends 'admin/admin_base.html.twig' %} #}
{% block main %}
<h2> Books List</h2>
<table class="table table-striped table-middle-aligned table-borderless">
<thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Title</th>
        <th scope="col">Text</th>
        <th scope="col" class="text-center"><i class="fa fa-cogs" aria-hidden="true"></i> {{ 'Action'|trans }}</th>
    </tr>
</thead>
<tbody>
{% for book in books %}
    <tr>
        <td>{{ book.id }}</td>
        <td>{{ book.title }}</td>
        <td>{{ book.text }}</td>
        <td class="text-right">
            <div class="item-actions">
                <a href="{{ path('app_admin_book_edit', {book: book.id}) }}" class="btn btn-sm btn-primary">
                    <i class="fa fa-edit" aria-hidden="true"></i> {{ 'Edit'|trans }}
                </a>
            </div>
        </td>
        <td class="text-right">
            <div class="item-actions">
                <a href="{{ path('app_book_delete', {book: book.id}) }}" class="btn btn-sm btn-primary">
                    <i class="fa fa-edit" aria-hidden="true"></i> {{ 'Delete'|trans }}
                </a>
            </div>
        </td>
    </tr>
{% endfor %}
</tbody>
</table>
{% endblock %}
