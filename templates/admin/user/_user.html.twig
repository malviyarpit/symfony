{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
<div>{{ form_errors(form) }}</div>
    <div>
    {{ form_label(form.email, 'Please Enter the User Name', {'label_attr': {'class': 'block text-sm text-gray-700 font-medium'}}) }}
    {{ form_widget(form.email, { 'attr': {'class': 'block w-full shadow-sm border-gray-300 rounded-md border p-2 mt-1 mb-2'}}) }}
    {{ form_errors(form.email) }}
    </div>

    <div>
    {{ form_label(form.password, 'Please Enter the User Password', {'label_attr': {'class': 'block text-sm text-gray-700 font-medium'}}) }}
    {{ form_widget(form.password,  { 'attr': {'class': 'block w-full shadow-sm border-gray-300 rounded-md border p-2 mt-1 mb-2'}}) }}
    {{ form_errors(form.password) }}
    </div>

    <div>
    <button type="submit", class="block w-full shadow-sm border-transparent bg-indigo-600 hover:bg-indigo-700 text-white rounded-md border p-2 mt-4 mb-2">Save!</button>
    </div>
{{ form_end(form) }}
