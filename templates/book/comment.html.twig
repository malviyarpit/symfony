{% extends 'base.html.twig' %}

{% block title %}Book - Add Comment{% endblock %}

{% block bread %}
-> <a href="{{ path('app_book_show', {book: book.id})}}">Book</a> -> Comment
{% endblock %}

{% block body %}
    {{ include('book/_book.html.twig', {book: book}) }}
    
    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        <div>{{ form_errors(form) }}</div>
        <div>

        <div>
        {{ form_label(form.text, 'Please Enter the Comment', {'label_attr': {'class': 'block text-sm text-gray-700 font-medium'}}) }}
        {{ form_widget(form.text,  { 'attr': {'class': 'block w-full shadow-sm border-gray-300 rounded-md border p-2 mt-1 mb-2'}}) }}
        {{ form_errors(form.text) }}
        </div>

        <div>
        <button type="submit", class="block w-full shadow-sm border-transparent bg-indigo-600 hover:bg-indigo-700 text-white rounded-md border p-2 mt-4 mb-2">Add Comment!</button>
        </div>
    {{ form_end(form) }}
{% endblock %}